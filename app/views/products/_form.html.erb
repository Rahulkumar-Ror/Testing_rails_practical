<div class="container mb-3 mt-3">
<div class="row justify-content-center">
<div class="col-7 mt-4">
<div class="card text-center shadow mb-5 bg-white" >


<%= form_with model: @product do |form| %>

	<div>
		<%= form.label :product_name, style: "display: block" %>
		<%= form.text_field :product_name, class: "form-control shadow rounded", placeholder: "Enter a product_name" %>
	</div>

	<div>
		<%= form.label :price, style: "display: block" %>
		<%= form.number_field :price, class: "form-control shadow rounded", placeholder: "$$$$$$$$" %>
	</div>

	<div>
		<%= form.label :description, style: "display: block" %>
		<%= form.text_area :description, class: "form-control shadow rounded", placeholder: "Enter the description" %>
	</div>
   
	<div class="mb-3 mt-3">
		<%= form.submit class: "btn btn-outline-primary btn-md" %>
	</div>
<% end %>