<div class="container mb-3 mt-3">
<div class="row justify-content-center">
<div class="col-9 mt-4">
<div class="card text-center shadow mb-5 bg-white">
<h2 class="text-center mb-3 mt-3", style="color:red;">List of all product</h2>
<center>
  <table>
      <th>Product Id</th>
      <th>Product name</th>
			<th colspan="3">Action</th>
			<% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
			<td><%= product.product_name %></td>
			<td><%= button_to "Show",product_path(product.id),method: :get, class: "btn btn-outline-primary"%>
	  	<td><%= button_to "Edit",edit_product_path(product.id),method: :get, class: "btn btn-outline-success" %></td>
      <td><%= button_to "Delete",product_path(product.id),method: :delete, class: "btn btn-outline-danger" %></td>
    <% end %>
		</tr>
  </table>
</center>
<center>
  <div class="mb-3 mt-3"> 
   <b> <%= link_to "Add new product",new_product_path %></b>
  </div>
</center>
<center>
<div>
  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-sm" %>
</div>
</center>
